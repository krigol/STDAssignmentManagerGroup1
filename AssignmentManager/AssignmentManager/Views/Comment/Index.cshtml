@* COMMENTS *@

@model AssignmentManager.Models.CommentListViewModel
<h1 class="pull-left">Comments @Model.AssignmentTitle</h1>
<a href="/Comment/Create/@Model.AssignmentId" class="btn btn-success pull-right" style="margin-top: 20px">Insert</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Content</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model.Comments)
        {
            <tr>
                <td>@comment.Content</td>
                <td>@comment.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@comment.UpdatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <a href="/Comment/Update/@comment.Id" class="btn btn-default">Update</a>
                    <a href="/Comment/Delete/@comment.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

